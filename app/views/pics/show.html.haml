#pic_show.row
	.col-md-8.col-md-offset-2
		.panel.panel-default
			.panel-heading.pic_image
				= image_tag @pic.image.url(:medium)
			.panel-body
				%h1= @pic.title
				%p= @pic.description
				%p
				Submitted by 
				= @pic.user.email
			.panel-footer
				.row
					.col-md-6
						%p.user
						Submitted by
						=@pic.user.email
					- if current_user.email == @pic.user.email
						.col-md-6
							.btn-group.pull-right
								-if user_signed_in?
									= link_to "Edit", edit_pic_path, class: "btn btn-default"
									= link_to "Delete", pic_path, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-default"
